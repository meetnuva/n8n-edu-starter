{
  "name": "n8n-codespaces",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "forwardPorts": [5678],
  "portsAttributes": {
    "5678": {
      "label": "n8n",
      "onAutoForward": "openPreview",
      "visibility": "public"
    }
  },
  "postStartCommand": "npx --yes n8n@latest start"
}
